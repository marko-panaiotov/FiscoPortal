@model FiscoPortal.Models.FiscalPrinter
@{
    ViewData["Title"] = "Details";
}
<h2 class="text-primary">Подробности за устройството</h2>
<form asp-action="" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Client">Категория</label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Client" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Client" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Brand">Марка</label>
                </div>
                <div class="col-8">
                    <input asp-for="Brand" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Model">Модел</label>
                </div>
                <div class="col-8">
                    <input asp-for="Model" readonly="readonly" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PurchaseDate">Дата на закупуване</label>
                </div>
                <div class="col-8">
                    <input asp-for="PurchaseDate" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ContractDate">Дата на договора</label>
                </div>
                <div class="col-8">
                    <input asp-for="ContractDate" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ContractDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ReSignContractDate">Дата за подновяване</label>
                </div>
                <div class="col-8">
                    <input asp-for="ReSignContractDate" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ReSignContractDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a type="button" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактирай</a>
                <a asp-action="Index" class="btn btn-success">Обратно към списъка</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

