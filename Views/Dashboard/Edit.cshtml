@model FiscoPortal.Models.FiscalPrinter
@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-primary">Редактиране на устройство</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Category">Категория</label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Category" class="form-control" />
                </div>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Brand">Марка</label>
                </div>
                <div class="col-8">
                    <input asp-for="Brand" class="form-control" />
                </div>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Model">Модел</label>
                </div>
                <div class="col-8">
                    <input asp-for="Model" class="form-control"/>
                </div>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PurchaseDate">Дата на закупуване</label>
                </div>
                <div class="col-8">
                    <input asp-for="PurchaseDate" class="form-control" />
                </div>
                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ContractDate">Дата на договора</label>
                </div>
                <div class="col-8">
                    <input asp-for="ContractDate" class="form-control" />
                </div>
                <span asp-validation-for="ContractDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ReSignContractDate">Дата за подновяване</label>
                </div>
                <div class="col-8">
                    <input asp-for="ReSignContractDate" class="form-control" />  
                </div>
                <span asp-validation-for="ReSignContractDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Обнови" />
                <a asp-action="Index" class="btn btn-success">Обратно към списъка</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

