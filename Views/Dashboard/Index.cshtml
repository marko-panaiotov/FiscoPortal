@using FiscoPortal.Models;
@model IEnumerable<FiscalPrinter>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Списък с фискални устройства</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp; Добавяне на нов продукт</a>
    </div>

</div>
<br />
<div>
    <table class="table table-striped border" id="myTable">
        <thead>
            <tr class="fisco-table-primary">
                <th>
                    Номер на устройство 
                </th>
                <th>
                    Производител
                </th>
                <th>
                    Модел
                </th>
                <th>
                    Клиент
                </th>
                <th>
                    Дата на закупуване
                </th>
                <th>
                    Дата на договора
                </th>
                <th>
                    Дата за подновяване
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
             @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FiscalPrinterNumber.ToString()</td>
                    <td>@item.Мanufacturer</td>
                    <td>@item.Model</td>
                    <td>@item.Client</td>
                    <td>@item.PurchaseDate.Date.ToString("dd.MM.yyy.г")</td>
                    <td>@item.ContractDate.Date.ToString("dd.MM.yyy.г")</td>
                    <td>@item.ReSignContractDate.Date.ToString("dd.MM.yyy.г")</td>
                    <td>
                        <partial name="_ButtonPartial" model="@item.Id" />
                    </td>
                </tr>
            }
            
        </tbody>

    </table>
</div>

@section scripts {
    <script src="~/alertifyjs/alertify.min.js"></script>
    <script src="~/DataTables/datatables.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.10/b-2.4.2/b-html5-2.4.2/datatables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/v/dt/jszip-3.10.1/dt-1.13.10/b-2.4.2/b-html5-2.4.2/b-print-2.4.2/datatables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'pageLength', 'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
        $(function () {
            var save = '@TempData["save"]'
            if (save != '') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if (edit != '') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del != '') {
                alertify.error(del);
            }
        })
    </script>
}