@model FiscoPortal.Models.FiscalPrinter
@{
    ViewData["Title"] = "Create";
}
<h2 class="text-primary">Добавяне на нов продукт</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <h3>@ViewBag.message</h3>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FiscalPrinterNumber">Номер на устройство</label>
            </div>
            <div class="col-5">
                <input asp-for="FiscalPrinterNumber" class="form-control" type="text"/>
            </div>
            <span asp-validation-for="FiscalPrinterNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Мanufacturer">Производител</label>
            </div>
            <div class="col-5">
                <input asp-for="Мanufacturer" class="form-control" />
            </div>
            <span asp-validation-for="Мanufacturer" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Model">Модел</label>
            </div>
            <div class="col-5">
                <input asp-for="Model" class="form-control"/>
            </div>
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Client">Клиент</label>
            </div>
            <div class="col-5">
                <input asp-for="Client" class="form-control" />
            </div>
            <span asp-validation-for="Client" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PurchaseDate">Дата на закупуване</label>
            </div>
            <div class="col-5">
                <input asp-for="PurchaseDate" class="form-control" type="date" />
            </div>
            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ContractDate">Дата на договора</label>
            </div>
            <div class="col-5">
                <input asp-for="ContractDate" class="form-control" type="date"/>
            </div>
            <span asp-validation-for="ContractDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ReSignContractDate">Дата за подновяване</label>
            </div>
            <div class="col-5">
                <input asp-for="ReSignContractDate" class="form-control" type="date" />
            </div>
            <span asp-validation-for="ReSignContractDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Запази" />
            <a asp-action="Index" class="btn btn-success">Обратно към списъка</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
